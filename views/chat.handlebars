<div class="chat-container">
    <div class="chat">
        <div class="chat-messages">
            {{#each msgs}}
            {{#if this.user_generated}}
            <p class="user-gen">{{this.text}}</p>
            {{else}}
            <p class="bot-gen">{{this.text}}</p>
            {{/if}}
            {{/each}}
        </div>

        <div class="chat-input">
            <form class="send-msg-form">
                <div contenteditable="true" name="chat-input-textarea" class="chat-input-textarea" id="chat-input-textarea"></div>
                <button type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M24 0l-6 22-8.129-7.239 7.802-8.234-10.458 7.227-7.215-1.754 24-12zm-15 16.668v7.332l3.258-4.431-3.258-2.901z"/></svg>
                </button>
            </form>
        </div>
    </div>
</div>

<script src="/js/send-msg.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/scroll.js"></script>